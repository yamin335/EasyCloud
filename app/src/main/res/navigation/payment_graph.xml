<?xml version="1.0" encoding="utf-8"?>

<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/payment_graph"
    app:startDestination="@+id/payment">

    <fragment
            android:id="@+id/payment"
            android:name="ltd.royalgreen.pacecloud.paymentmodule.PaymentFragment"
            android:label="@string/payment"
    >
        <action
                android:id="@+id/action_leaderboard_to_userProfile"
                app:destination="@id/userProfile"/>
    </fragment>
    <fragment
        android:id="@+id/userProfile"
        android:name="ltd.royalgreen.pacecloud.paymentmodule.UserProfile"
        android:label="@string/title_detail"
        tools:layout="@layout/fragment_user_profile">
        <deepLink
            android:id="@+id/deepLink"
            app:uri="www.example.com/user/{userName}"
            android:autoVerify="true"/>
        <argument
            android:name="userName"
            app:argType="string"/>
    </fragment>
</navigation>
