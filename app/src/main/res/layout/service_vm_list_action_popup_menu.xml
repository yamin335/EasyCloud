<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="#FFFFFFFF"
        app:cardCornerRadius="5dp"
        app:cardElevation="16dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/menuAttachVolume"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/menuStartStop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">
            <ImageView
                    android:id="@+id/iconAttachVolume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/colorGray"
                    android:padding="3dp"
                    android:background="@drawable/rounded_bg_lightgray"
                    app:srcCompat="@drawable/ic_add_white_24dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"/>
            <TextView
                    android:text="Attach Volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginEnd="24dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimaryLight"
                    android:id="@+id/labelAttachVolume"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/menuStartStop"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@+id/menuAttachVolume"
                app:layout_constraintBottom_toTopOf="@+id/menuReboot"
                app:layout_constraintStart_toStartOf="@+id/menuAttachVolume"
                app:layout_constraintEnd_toEndOf="@+id/menuAttachVolume">
            <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="1dp"
                    android:paddingEnd="1dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/switchStartStop"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginEnd="24dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimaryLight"
                    android:id="@+id/labelStartStop"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/menuReboot"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@+id/menuStartStop"
                app:layout_constraintBottom_toTopOf="@+id/menuTerminate"
                app:layout_constraintStart_toStartOf="@+id/menuStartStop"
                app:layout_constraintEnd_toEndOf="@+id/menuStartStop">
            <ImageView
                    android:id="@+id/iconReboot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/rounded_bg_lightgray"
                    android:padding="3dp"
                    android:tint="@color/colorGray"
                    app:srcCompat="@drawable/ic_repeat_black_24dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"/>
            <TextView
                    android:text="Reboot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginEnd="24dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimaryLight"
                    android:id="@+id/labelReboot"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/menuTerminate"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menuReboot" app:layout_constraintStart_toStartOf="@+id/menuReboot"
                app:layout_constraintEnd_toEndOf="@+id/menuReboot">
            <ImageView
                    android:id="@+id/iconTerminate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="3dp"
                    android:tint="@color/colorGray"
                    android:background="@drawable/rounded_bg_lightgray"
                    app:srcCompat="@drawable/ic_clear_black_24dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"/>
            <TextView
                    android:text="Terminate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginEnd="24dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimaryLight"
                    android:id="@+id/labelTerminate"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>