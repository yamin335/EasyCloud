<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="viewModel" type="ltd.royalgreen.pacecloud.paymentmodule.PaymentFragmentViewModel"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/loader"
                android:layout_width="match_parent"
                android:layout_marginBottom="-13dp"
                android:layout_marginTop="-13dp"
                android:layout_height="30dp"
                android:indeterminate="true"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/userBalance"
                    android:text="@{`Balance: `+viewModel.userBalance}"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/rechargeButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:text="Recharge"
                    android:onClick="@{() -> viewModel.rechargeAccount()}"
                    android:textAllCaps="false"
                    app:cornerRadius="5dp"
                    app:iconGravity="start"
                    android:textSize="13sp"
                    android:paddingStart="5dp"
                    android:paddingEnd="8dp"
                    android:textColor="@color/colorPrimary"
                    app:iconTint="@color/colorGray"
                    app:icon="@drawable/ic_monetization_on_gray_24dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"/>

        </LinearLayout>
        <View
                android:id="@+id/divider"
                android:background="?android:attr/listDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/paymentRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>
</layout>